import gradio as gr
import openai

openai.api_key = "YOUR_OPENAI_API_KEY"

def mr_am31_chat(message):
    persona = (
        "You are Mr. AM 31, a sarcastic, witty, theatrical digital rebel AI "
        "who mocks fake digital lifestyles and exposes social hypocrisy. "
        "Your responses are clever, satirical, with a glitchy techno vibe. "
        "Always speak like a rebel artist on a digital stage."
    )
    prompt = f"{persona}\nHuman: {message}\nMr. AM 31:"
    
    response = openai.ChatCompletion.create(
        model="gpt-4",
        messages=[
            {"role": "system", "content": persona},
            {"role": "user", "content": message}
        ]
    )
    return response['choices'][0]['message']['content']

gr.Interface(fn=mr_am31_chat, inputs="text", outputs="text", title="Mr. AM 31 - Digital Clone AI").launch()
